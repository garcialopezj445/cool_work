<div class="container p-4">
    <div class="row">

        {{#each registrosUsuario}}
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body mx-auto">
                        <a href="" class="text-center" target="_blank">
                            <h3 class="card-title text-uppercase">
                                {{nombre_servicio}}
                            </h3>
                        </a>
                        <h6>Identificación del registro:</h6>
                        <p>{{identificacion_registro}}</p>                        

                        <h6>Categoría del servicio</h6>
                        <p>{{codigo_servicio_categoria}}</p>                       

                        <h6>Descripción del registro</h6>
                        <p>{{descripcion_servicio}}</p>

                        <p class="text-center">
                            {{timeago created_at}}
                        </p>

                        <div class="mx-auto">
                            <a href="/links/delete/{{identificacion_registro}}" class="btn btn-danger" style="margin: 10px;">Borrar</a>
                            <a href="/links/edit/{{identificacion_registro}}" class="btn btn-secondary" style="margin: 10px;">Editar</a>
                        </div>
                    </div>
                </div>
            </div>

        {{else}}

            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay links guardados</p>
                    <a href="/links/add">¡Crear un link!</a>
                </div>
            </div>

        {{/each}}

    </div>
</div>