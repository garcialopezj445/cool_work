<div class="container p-4">
    <div class="row">
        {{#each hilos}}
        <div class="col-md-4" style="margin-top: 10px;">
            <div class="card">
                <div class="card-body mx-auto">
                    <a href="" class="text-center" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{nombre_servicio}}
                        </h3>
                    </a>
                    <h6>Identificación del Hilo:</h6>
                    <p>{{identificacionHilo}}</p>

                    <h6>Descripción del hilo:</h6>
                    <p>{{descripcionHilo}}</p>

                    <h6>Referencias bibliográficas:</h6>
                    <p>{{referencasBibliograficas}}</p>
{{!--
                    <p class="text-center">
                        {{timeago created_at}}
                    </p>
--}}
                    <div class="mx-auto col-sm">                      
                        <form action="/searchUser" method="GET"
                            style="display: inline;">
                            <button class="btn btn-block btn-success">
                                Volver
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        {{else}}

        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay hilos guardados</p>
                <div class="mx-auto col-sm">                      
                        <form action="/searchUser" method="GET"
                            style="display: inline;">
                            <button class="btn btn-block btn-success">
                                Volver
                            </button>
                        </form>
                </div>
        </div>

        {{/each}}
    </div>
</div>