                        <form action="/Volver/{{identificacionUsuario_hilo}}" method="GET"
                            style="display: inline;">
                            <button class="btn btn-success">
                                Volver
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        {{else}}

        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay links guardados</p>
        </div>

        {{/each}}
    </div>
