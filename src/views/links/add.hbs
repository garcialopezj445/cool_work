<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <br />
                <div class="mx-auto">
                    <img src="/images/trabajo-en-equipo.png" alt="img_cool_work" style="height: 5rem;">
                </div>
                <div class="card-body">
                    <form action="/links/add" method="POST">                
                        <div class="form-group">
                            <input type="text" class="form-control" name="nombre_servicio"
                                placeholder="Nombre de registro" />
                        </div>

                        <div class="form-group">
                            <input type="text" class="form-control" name="identificacion_servicio_usuario" placeholder="Identificación del usuario" />
                        </div>

                        <div class="form-group">
                            <select name="codigo_servicio_categoria" class="form-control">
                                <option disabled>Categoria del servicio</option>
                                <option>psicologia</option>
                                <option>desarrollo web</option>
                                <option>abogado</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <textarea name="descripcion_servicio" rows="3" class="form-control"
                                placeholder="Descripción del servicio"></textarea>
                        </div>

                        <button class="btn btn-primary btn-block">
                            Guardar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>